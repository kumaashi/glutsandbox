	uint index = gl_GlobalInvocationID.x + gl_GlobalInvocationID.y * 16;
	vec4 temp = data[index];
	data[index] = vec4(
		float(mod(index, 8) - 4),
		-2.8 + float(index / 64) + sin(info.x) * 2.0,
		float(mod(index / 8, 8) - 4), 0.0);
}
